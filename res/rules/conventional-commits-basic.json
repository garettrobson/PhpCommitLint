{
    "ruleSets": {
        "conventional-commits-basic": {
            "summary-no-leading-spaces": {
                "type": "property-regex",
                "parameters": [
                    "summary",
                    "/^\\s*/",
                    true,
                    "Summary can not have leading spaces"
                ]
            },

            "type-required": {
                "type": "property-existence",
                "parameters": [
                    "type"
                ]
            },
            "type-set": {
                "type": "property-set",
                "parameters": [
                    "type",
                    [
                        "fix",
                        "feat",
                        "build",
                        "chore",
                        "ci",
                        "docs",
                        "style",
                        "refactor",
                        "perf",
                        "test"
                    ]
                ]
            },

            "type-separator-regex": {
                "type": "property-regex",
                "parameters": [
                    "type_separator",
                    "/^\\s?$/",
                    true,
                    "There must not be more than 1 space between type and scope"
                ]
            },

            "scope-outer-brackets": {
                "type": "property-regex",
                "parameters": [
                    "scope_outer",
                    "/^(\\(.*\\)|\\[.*\\]|{.*}|<.*>)?$/",
                    true,
                    "Scope must using matching brackets"
                ]
            },
            "scope-start-separator-brackets": {
                "type": "property-regex",
                "parameters": [
                    "scope_start_separator",
                    "/^$/",
                    true,
                    "Scope must not start with space"
                ]
            },
            "scope-end-separator-brackets": {
                "type": "property-regex",
                "parameters": [
                    "scope_end_separator",
                    "/^$/",
                    true,
                    "Scope must not end with spaces"
                ]
            },

            "breaking-separator-regex": {
                "type": "property-regex",
                "parameters": [
                    "breaking_separator",
                    "/^\\s?$/",
                    true,
                    "There must not be more than 1 space before breaking change (!) marker"
                ]
            },

            "colon-separator-required": {
                "type": "property-existence",
                "parameters": [
                    "colon_separator",
                    false,
                    "Must not have any space before colon (:) marker"
                ]
            },
            "colon-required": {
                "type": "property-existence",
                "parameters": [
                    "colon"
                ]
            },

            "description-separator-regex": {
                "type": "property-regex",
                "parameters": [
                    "description_separator",
                    "/^\\s?$/",
                    true,
                    "There must not be more than 1 space before description"
                ]
            },

            "description-required": {
                "type": "property-existence",
                "parameters": [
                    "description"
                ]
            },
            "description-regex": {
                "type": "property-regex",
                "parameters": [
                    "description",
                    "/^\\w+/",
                    true,
                    "Description must start with a valid word character"
                ]
            },

            "body-start-regex": {
                "type": "property-regex",
                "parameters": [
                    "body",
                    "/^\\n[^\\n]+/",
                    true,
                    "Body must start with a single new line."
                ]
            },
            "body-paragraph-regex": {
                "type": "property-regex",
                "parameters": [
                    "body",
                    "/[^\\^]\\n\\n\\n/",
                    false,
                    "Paragraphs must be separated by a single line."
                ]
            }
        }
    }
}
