{
    "ruleSets": {
        "conventional-commits-basic": {
            "summary-no-leading-spaces": {
                "type": "property-regex",
                "property": "summary",
                "pattern": "/^\\s*/",
                "positiveCheck": true,
                "errorMessage": "Summary can not have leading spaces"
            },

            "type-required": {
                "type": "property-existence",
                "property": "type"
            },
            "type-set": {
                "type": "property-set",
                "property": "type",
                "set": [
                    "fix",
                    "feat",
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "style",
                    "refactor",
                    "perf",
                    "test"
                ]
            },

            "type-separator-regex": {
                "type": "property-regex",
                "property": "type_separator",
                "pattern": "/^\\s?$/",
                "positiveCheck": true,
                "errorMessage": "There must not be more than 1 space between type and scope"
            },

            "scope-outer-brackets": {
                "type": "property-regex",
                "property": "scope_outer",
                "pattern": "/^(\\(.*\\)|\\[.*\\]|{.*}|<.*>)?$/",
                "positiveCheck": true,
                "errorMessage": "Scope must using matching brackets"
            },
            "scope-start-separator-brackets": {
                "type": "property-regex",
                "property": "scope_start_separator",
                "pattern": "/^$/",
                "positiveCheck": true,
                "errorMessage": "Scope must not start with space"
            },
            "scope-end-separator-brackets": {
                "type": "property-regex",
                "property": "scope_end_separator",
                "pattern": "/^$/",
                "positiveCheck": true,
                "errorMessage": "Scope must not end with spaces"
            },

            "breaking-separator-regex": {
                "type": "property-regex",
                "property": "breaking_separator",
                "pattern": "/^\\s?$/",
                "positiveCheck": true,
                "errorMessage": "There must not be more than 1 space before breaking change (!) marker"
            },

            "colon-separator-required": {
                "type": "property-existence",
                "property": "colon_separator",
                "positiveCheck": false,
                "errorMessage": "Must not have any space before colon (:) marker"
            },
            "colon-required": {
                "type": "property-existence",
                "property": "colon"
            },

            "description-separator-regex": {
                "type": "property-regex",
                "property": "description_separator",
                "pattern": "/^\\s?$/",
                "positiveCheck": true,
                "errorMessage": "There must not be more than 1 space before description"
            },

            "description-required": {
                "type": "property-existence",
                "property": "description"
            },
            "description-regex": {
                "type": "property-regex",
                "property": "description",
                "pattern": "/^\\w+/",
                "positiveCheck": true,
                "errorMessage": "Description must start with a valid word character"
            },

            "body-start-regex": {
                "type": "property-regex",
                "property": "body",
                "pattern": "/^\\n[^\\n]+/",
                "positiveCheck": true,
                "errorMessage": "Body must start with a single new line."
            },
            "body-paragraph-regex": {
                "type": "property-regex",
                "property": "body",
                "pattern": "/[^\\^]\\n\\n\\n/",
                "positiveCheck": false,
                "errorMessage": "Paragraphs must be separated by a single line."
            }
        }
    }
}
