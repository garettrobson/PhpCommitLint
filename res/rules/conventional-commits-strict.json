{
    "ruleSets": {
        "conventional-commits-strict": {
            "description-separator-required": {
                "type": "property-existence",
                "property": "description_separator"
            },

            "description-upper": {
                "type": "property-regex",
                "property": "description",
                "pattern": "/^[A-Z0-9]/",
                "positiveCheck": true,
                "errorMessage": "The <comment>description</comment> of the <comment>summary</comment> must start with a capitol letter or number <comment>/^[A-Z0-9]/</comment>"
            }
        }
    }
}
