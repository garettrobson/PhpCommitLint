{
    "ruleSets": {
        "conventional-commits-strict": {
            "description-separator-required": {
                "type": "property-existence",
                "property": "description_separator"
            },

            "description-upper": {
                "type": "property-regex",
                "property": "type",
                "pattern": "/^[A-Z0-9].*$/",
                "positiveCheck": true,
                "errorMessage": "Description must start with a capitol letter or number"
            }
        }
    }
}
