{
    "ruleSets": {
        "conventional-commits-strict": {
            "description-separator-required": {
                "type": "property-existence",
                "parameters": [
                    "description_separator"
                ]
            },
            "description-upper": {
                "type": "property-regex",
                "parameters": [
                    "type",
                    "/^[A-Z0-9].*$/",
                    "Description must start with a capitol letter or number"
                ]
            }
        }
    }
}
