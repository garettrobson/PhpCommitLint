{
    "ruleSets": {
        "conventional-commits": {
            "summary-no-leading-spaces": {
                "type": "property-regex",
                "parameters": [
                    "summary",
                    "/^\\s*/",
                    "Summary can not start with a space"
                ]
            },

            "type-required": {
                "type": "property-existence",
                "parameters": [
                    "type"
                ]
            },
            "type-set": {
                "type": "property-set",
                "parameters": [
                    "type",
                    [
                        "fix",
                        "feat",
                        "build",
                        "chore",
                        "ci",
                        "docs",
                        "style",
                        "refactor",
                        "perf",
                        "test"
                    ]
                ]
            },

            "scope-separator-regex": {
                "type": "property-regex",
                "parameters": [
                    "scope_separator",
                    "/^\\s?$/",
                    "There must not be more than 1 space between type and scope"
                ]
            },

            "type-excess-space-rejected": {
                "type": "property-existence",
                "parameters": [
                    "type_excess_space",
                    false,
                    "Must not include excessive space after type"
                ]
            },
            "description-required": {
                "type": "property-existence",
                "parameters": [
                    "description"
                ]
            }
        }
    }
}
