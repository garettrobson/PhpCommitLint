{
    "conventional-commits": {
        "type-required": {
            "class": "GarettRobson\\PhpCommitLint\\Validation\\PropertyRequiredRule",
            "parameters": [
                "type"
            ]
        },
        "description-required": {
            "class": "GarettRobson\\PhpCommitLint\\Validation\\PropertyRequiredRule",
            "parameters": [
                "description"
            ]
        },
        "type-set": {
            "class": "GarettRobson\\PhpCommitLint\\Validation\\PropertySetRule",
            "parameters": [
                "type",
                [
                    "fix",
                    "feat",
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "style",
                    "refactor",
                    "perf",
                    "test"
                ]
            ]
        }
    }
}
