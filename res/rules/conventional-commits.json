{
    "ruleSets": {
        "conventional-commits": {
            "type-required": {
                "type": "property-required",
                "parameters": [
                    "type"
                ]
            },
            "description-required": {
                "type": "property-required",
                "parameters": [
                    "description"
                ]
            },
            "type-set": {
                "type": "property-set",
                "parameters": [
                    "type",
                    [
                        "fix",
                        "feat",
                        "build",
                        "chore",
                        "ci",
                        "docs",
                        "style",
                        "refactor",
                        "perf",
                        "test"
                    ]
                ]
            }
        }
    }
}
