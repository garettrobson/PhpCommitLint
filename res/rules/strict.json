{
    "ruleSets": {
        "strict": {
            "scope-separator-required": {
                "type": "property-existence",
                "parameters": [
                    "scope_separator",
                    false,
                    "Must include a space between type and scope"
                ]
            },

            "description-upper": {
                "type": "property-regex",
                "parameters": [
                    "type",
                    "/^[A-Z0-9].*$/",
                    "Description must start with a capitol letter or number"
                ]
            }
        }
    }
}
